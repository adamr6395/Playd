

{{#if error}}
<div class="error-message" class="error-message">{{error}}</div>
{{/if}}
<div id="error-container" class="error-container"></div>
<form id="searchTitle" action="/gamesearch" method="post">
  <label for="searchByTitle">Enter Game Title:</label>
  <input type="text" id="searchByTitle" name="searchByTitle" required>
  <input type="submit" id="search_button" name="search_button">
</form>

<section>
  <h2>Popular Games</h2>
  <div class="gameContainer">
    {{#each popularGames}}
    <div class="gameCard">
      <a href="/getGame/{{this.id}}">
        <img class="home_images" src="{{this.cover.url}}" alt="{{this.name}}">
        <h3>{{this.name}}</h3>
        <p>Rating: {{this.rating}}</p>
      </a>
    </div>
    {{/each}}
  </div>
</section>

<section>
  <h2>Top Games According to User Reviews!</h2>
  <div class="gameContainer">
    {{#each scoreGames}}
    <div class="gameCard">
      <a href="/getGame/{{this.game_id}}">
        {{#if this.cover}}
        <img class="home_images" src="{{this.cover}}" alt="{{this.name}}">
        {{else}}
        <img class="home_images" src="/public/no_image.jpeg" alt="{{this.name}}">
        {{/if}}
        <h3>{{this.name}}</h3>
        <p>Score: {{this.score}}</p>
      </a>
    </div>
    {{/each}}
  </div>
</section>

<section>
  <h2>Games by Genre</h2>
  {{#each genreGames}}
  <h3 class="home_header">{{@key}} Games</h3>
  <div class="gameContainer">
    {{#each this}}
    <div class="gameCard">
      <a href="/getGame/{{this.id}}">
        {{#if this.cover}}
        <img class="home_images" src="{{this.cover.url}}" alt="{{this.name}}">
        {{else}}
        <img class="home_images" src="/public/no_image.jpeg" alt="{{this.name}}">
        {{/if}}
        <h3>{{this.name}}</h3>
        <p>Rating: {{this.rating}}</p>
      </a>
    </div>
    {{/each}}
  </div>
  {{/each}}
</section>
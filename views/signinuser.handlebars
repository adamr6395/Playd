{{!--

login form handlebar template

--}}
<header>
    <h1>Sign In</h1>
</header>
{{#if error}}
  <div class="error-message" class="error-message">{{error}}</div>
{{/if}}
<div id="error-container" class = "error-container"></div>
<form id="signin-form" method="POST" action="/signinuser">
    <div>
      <label for="userId">User ID:</label>
      <input type="text" id="userId" name="userId" value="{{data.userId}}">
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password">
    </div>
    <button type="submit" id="submit_button" name="submit_button">Sign In</button>
</form>

<p><a href="/signupuser">Click here to signup!</a></p>